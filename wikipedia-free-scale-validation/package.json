    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "fast-check": "^3.8.0",
    "jest": "^29.5.0",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.0",
    "commander": "^10.0.0"
